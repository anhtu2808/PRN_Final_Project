                                <i class="fas fa-hdd"></i>
                                1TB SSD
                            </div>
                        </div>
                        <div class="laptop-pricing">
                            <div>
                                <div class="price-daily">₫350,000</div>
                                <div class="price-label">per day</div>
                            </div>
                        </div>
