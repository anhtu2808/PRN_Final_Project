@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="hero-content">
                    <h1 class="hero-title">Rent Premium Laptops for Every Need</h1>
                    <p class="hero-subtitle">
                        Access the latest laptops for work, gaming, or study. 
                        Flexible rental periods, competitive prices, and excellent support.
                    </p>
                    <div class="hero-actions">
                        <a href="/laptops" class="btn btn-light btn-lg me-3">
                            <i class="fas fa-laptop me-2"></i>Browse Laptops
                        </a>
                        <a href="/categories" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-th-large me-2"></i>View Categories
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="hero-stats">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="stat-item">
                                <span class="stat-number">500+</span>
                                <span class="stat-label">Laptops Available</span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <span class="stat-number">1K+</span>
                                <span class="stat-label">Happy Customers</span>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <span class="stat-number">24/7</span>
                                <span class="stat-label">Support</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-gradient">Browse by Category</h2>
            <p class="lead text-muted">Find the perfect laptop for your specific needs</p>
        </div>
        
        <div class="category-grid">
            <a href="/laptops?category=gaming" class="category-card fade-in-on-scroll">
                <div class="category-image">
                    <i class="fas fa-gamepad"></i>
                </div>
                <div class="category-info">
                    <h5 class="category-name">Gaming Laptops</h5>
                    <p class="category-count">45 laptops available</p>
                </div>
            </a>

            <a href="/laptops?category=business" class="category-card fade-in-on-scroll">
                <div class="category-image">
                    <i class="fas fa-briefcase"></i>
                </div>
                <div class="category-info">
                    <h5 class="category-name">Business Laptops</h5>
                    <p class="category-count">78 laptops available</p>
                </div>
            </a>

            <a href="/laptops?category=student" class="category-card fade-in-on-scroll">
                <div class="category-image">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="category-info">
                    <h5 class="category-name">Student Laptops</h5>
                    <p class="category-count">92 laptops available</p>
                </div>
            </a>

            <a href="/laptops?category=ultrabook" class="category-card fade-in-on-scroll">
                <div class="category-image">
                    <i class="fas fa-laptop"></i>
                </div>
                <div class="category-info">
                    <h5 class="category-name">Ultrabooks</h5>
                    <p class="category-count">34 laptops available</p>
                </div>
            </a>
        </div>
    </div>
</section>

