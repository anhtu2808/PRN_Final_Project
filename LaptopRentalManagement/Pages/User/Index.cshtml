@page
@model LaptopRentalManagement.Pages.User.IndexModel
@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 mb-4">
            @await Html.PartialAsync("_AccountSidebar", "User")
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Tab: Mua / Bán -->
                    <ul class="nav nav-pills mb-3" id="orderTypeTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="buy-tab" data-bs-toggle="pill"
                                    data-bs-target="#buy-tab-pane" type="button" role="tab">Đơn mua
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="sell-tab" data-bs-toggle="pill" data-bs-target="#sell-tab-pane"
                                    type="button" role="tab">Đơn bán
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="orderTypeTabContent">
                        <!-- Đã Thuê -->
                        <div class="tab-pane fade show active" id="buy-tab-pane" role="tabpanel">
                            <div class="d-flex justify-content-end mb-3">
                                <a href="/laptops" class="btn btn-primary">
                                    <i class="fas fa-laptop me-2"></i>Thuê Laptop Ngay
                                </a>
                            </div>

                            @if (!Model.Orders.Any())
                            {
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-box-open fa-3x mb-3"></i>
                                    <h5>Chưa có đơn mua</h5>
                                    <p>Bạn chưa thực hiện đơn hàng nào.</p>
                                </div>
                            }
                            else
                            {
                                <div class="list-group">
                                    @foreach (var order in Model.Orders)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Order #@order.OrderId</h6>
                                                <small class="text-muted">Ngày đặt: @order.CreatedAt:dd/MM/yyyy</small>
                                            </div>
                                            <span class="badge bg-secondary">@order.Status</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Đơn Thuê -->
                        <div class="tab-pane fade" id="sell-tab-pane" role="tabpanel">
                            <div class="d-flex justify-content-end mb-3">
                                <a href="#" class="btn btn-outline-primary" data-bs-toggle="modal"
                                   data-bs-target="#rentOutModal">
                                    <i class="fas fa-laptop-house me-2"></i>Đăng cho thuê
                                </a>
                            </div>

                            @if (!Model.RentalOrder.Any())
                            {
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-store fa-3x mb-3"></i>
                                    <h5>Chưa có đơn bán</h5>
                                    <p>Chưa có khách hàng nào thuê laptop của bạn.</p>
                                </div>
                            }
                            else
                            {
                                <div class="list-group">
                                    @foreach (var order in Model.RentalOrder)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                @if (order.Renter?.Name != null)
                                                {
                                                    <h6 class="mb-1"><strong>Đơn thuê của @order.Renter.Name</strong>
                                                    </h6>
                                                }
                                                else
                                                {
                                                    <h6 class="mb-1"><strong>Chưa có người thuê</strong></h6>
                                                }
                                                <small>Laptop: @(order.Laptop?.Name ?? "Không rõ")</small><br/>
                                                <small class="text-muted">Ngày thuê khả
                                                    dụng: @order.StartDate.ToString("dd/MM/yyyy") - @order.EndDate.ToString("dd/MM/yyyy")</small><br/>
                                            </div>
                                            <span class="badge bg-success">@order.Status</span>
                                            <a href="/user/rental-orders/@order.OrderId" class="btn btn-sm btn-link">Chi
                                                tiết</a>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_RentOutModal", Model.MyLaptops)