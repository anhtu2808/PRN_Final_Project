@page
@model LaptopRentalManagement.Pages.User.IndexModel
@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 mb-4">
            @await Html.PartialAsync("_AccountSidebar", "User")
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Tab: Rent / Manage -->
                    <ul class="nav nav-pills mb-3" id="orderTypeTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="buy-tab" data-bs-toggle="pill" data-bs-target="#buy-tab-pane" type="button" role="tab">My Rentals</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="sell-tab" data-bs-toggle="pill" data-bs-target="#sell-tab-pane" type="button" role="tab">Manage Laptops</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="orderTypeTabContent">
                        <!-- My Rentals -->
                        <div class="tab-pane fade show active" id="buy-tab-pane" role="tabpanel">
                            <div class="d-flex justify-content-end mb-3">
                                <a href="/laptops" class="btn btn-primary">
                                    <i class="fas fa-laptop me-2"></i>Rent a Laptop Now
                                </a>
                            </div>

                            @if (!Model.MyRentalOrder.Any())
                            {
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-box-open fa-3x mb-3"></i>
                                    <h5>No Orders Found</h5>
                                    <p>You haven't placed any rental orders yet.</p>
                                </div>
                            }
                            else
                            {
                                <div class="list-group">
                                    @foreach (var order in Model.MyRentalOrder)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Order #@order.OrderId</h6>
                                                <small class="text-muted">Owner: @order.Owner.Name</small>
                                                <div class="text-muted small">
                                                    Laptop: <strong>@order.Laptop?.Name</strong>
                                                </div>
                                            </div>
                                            <span class="badge bg-secondary">@order.Status</span>
                                            <a href="/user/rental-order/@order.OrderId" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-info-circle me-1"></i>View Details
                                            </a>
                                        </div>
                                       
                                    }
                                </div>
                            }
                        </div>

                        <!-- Manage Laptops -->
                        <div class="tab-pane fade" id="sell-tab-pane" role="tabpanel">
                            @if (!Model.MyLaptops.Any())
                            {
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-store fa-3x mb-3"></i>
                                    <h5>No Laptops Found</h5>
                                    <p>You don't have any laptops listed for rent.</p>
                                </div>
                            }
                            else
                            {
                                <div class="list-group">
                                    @foreach (var order in Model.MyLaptops)
                                    {
                                        <div class="list-group-item d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                                            <div class="d-flex align-items-center gap-3">
                                                <img src="@order.ImageURL" alt="@order.Name" class="rounded" style="width: 120px; height: 100px; object-fit: cover;" />

                                                <div>
                                                    @if (!string.IsNullOrEmpty(order.Name))
                                                    {
                                                        <h6 class="mb-1">Laptop: <strong>@order.Name</strong></h6>
                                                    }
                                                    else
                                                    {
                                                        <h6 class="mb-1"><strong>Unverified</strong></h6>
                                                    }
                                                </div>
                                            </div>

                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-success">@order.Status</span>
                                                <a href="/user/laptop/@order.LaptopId" class="btn btn-sm btn-outline-primary">View Details</a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

