@page
@model LaptopRentalManagement.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-bg {
        background: linear-gradient(135deg, #e3f0ff 0%, #f8f9fa 100%);
        min-height: 100vh;
    }

    .login-card {
        max-width: 420px;
        margin: 0 auto;
        border-radius: 18px !important;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0,0,0,0.08), 0 1.5px 3px rgba(0,0,0,0.06);
        background: #fff;
    }

    .login-card-header {
        background: linear-gradient(90deg, #1565c0 0%, #42a5f5 100%);
        color: #fff;
        text-align: center;
        border-bottom: none;
        padding: 2rem 1rem 1.5rem 1rem;
    }

        .login-card-header h3 {
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 0;
            font-size: 2rem;
        }

    .form-label {
        font-weight: 500;
        color: #2d3748;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #b3c2db;
        box-shadow: none;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #42a5f5;
            box-shadow: 0 0 0 2px rgba(66,165,245,0.15);
        }

    .form-check-input {
        border-radius: 6px;
    }

    .btn-primary {
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0.65rem 0;
        letter-spacing: 1px;
        background: linear-gradient(90deg,#43e97b 0%, #38f9d7 100%);
        border: none;
        box-shadow: 0 4px 16px rgba(67,233,123,0.10);
        color: #fff;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg,#38f9d7 0%, #43e97b 100%);
            color: #fff;
        }

    .btn-outline-primary {
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 1px;
        border: 2px solid #42a5f5;
        color: #1565c0;
        transition: background 0.18s, color 0.18s;
    }

        .btn-outline-primary:hover {
            background: #1565c0;
            color: #fff;
            border-color: #1565c0;
        }

    .alert-danger {
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }
</style>

<div class="login-bg py-5">
    <div class="login-card shadow">
        <div class="login-card-header">
            <h3><i class="bi bi-person-circle"></i> Login</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Input.Email" class="form-label">
                        Email <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Password" class="form-label">
                        Password <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck" />
                    <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMeCheck">
                        Remember me
                    </label>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <hr class="my-4">

            <div class="text-center">
                <p class="mb-2">Don't have an account?</p>
                <a asp-page="/Account/CustomerRegister" class="btn btn-outline-primary">
                    <i class="bi bi-person-plus"></i> Register
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <partial name="_ValidationScriptsPartial" />
}