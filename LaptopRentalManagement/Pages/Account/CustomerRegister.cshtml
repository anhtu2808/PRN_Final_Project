@page
@model LaptopRentalManagement.Pages.Account.CustomerRegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<style>
    .register-bg {
        background: linear-gradient(135deg, #e3f0ff 0%, #f8f9fa 100%);
        min-height: 100vh;
    }

    .register-card {
        max-width: 480px;
        margin: 0 auto;
        border-radius: 18px !important;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0,0,0,0.08), 0 1.5px 3px rgba(0,0,0,0.06);
        background: #fff;
    }

    .register-card-header {
        background: linear-gradient(90deg, #1565c0 0%, #42a5f5 100%);
        color: #fff;
        border-bottom: none;
        text-align: center;
        padding: 2rem 1rem 1.5rem 1rem;
    }

        .register-card-header h3 {
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 0;
            font-size: 2rem;
        }

    .form-label {
        font-weight: 500;
        color: #2d3748;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #b3c2db;
        box-shadow: none;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #42a5f5;
            box-shadow: 0 0 0 2px rgba(66,165,245,0.15);
        }

    .form-check-input {
        border-radius: 6px;
    }

    .btn-primary {
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0.65rem 0;
        letter-spacing: 1px;
        background: linear-gradient(90deg,#43e97b 0%, #38f9d7 100%);
        border: none;
        box-shadow: 0 4px 16px rgba(67,233,123,0.10);
        color: #fff;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg,#38f9d7 0%, #43e97b 100%);
            color: #fff;
        }

    .btn-outline-primary {
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 1px;
        border: 2px solid #42a5f5;
        color: #1565c0;
        transition: background 0.18s, color 0.18s;
    }

        .btn-outline-primary:hover {
            background: #1565c0;
            color: #fff;
            border-color: #1565c0;
        }

    .alert-danger, .alert-success {
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }
</style>

<div class="register-bg py-5">
    <div class="register-card shadow">
        <div class="register-card-header">
            <h3><i class="bi bi-person-plus"></i> Create Account</h3>
            <p class="text-center text-light mt-2 mb-0" style="font-size:1.07rem;">Join us to start renting laptops</p>
        </div>
        <div class="card-body p-4">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Input.Name" class="form-label">
                        Full Name <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Name" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Email" class="form-label">
                        Email Address <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Enter your email address" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Password" class="form-label">
                        Password <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Create a password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="form-text">Password must be at least 6 characters long.</div>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        Confirm Password <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-4 form-check">
                    <input asp-for="Input.AgreeToTerms" class="form-check-input" type="checkbox" id="agreeToTermsCheck" />
                    <label asp-for="Input.AgreeToTerms" class="form-check-label" for="agreeToTermsCheck">
                        I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a>
                    </label>
                    <span asp-validation-for="Input.AgreeToTerms" class="text-danger d-block"></span>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus-fill"></i> Create Account
                    </button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success mt-3" role="alert">
                    @Model.SuccessMessage
                </div>
            }

            <hr class="my-4">

            <div class="text-center">
                <p class="mb-2">Already have an account?</p>
                <a asp-page="/Account/Login" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <partial name="_ValidationScriptsPartial" />
}