@page
@model LaptopRentalManagement.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Account Management";
}

<style>
    .account-list-bg {
        background: linear-gradient(120deg, #e3f0ff 0%, #f8f9fa 100%);
        min-height: 100vh;
        padding: 40px 0;
    }

    .account-list-card {
        max-width: 1100px;
        margin: 0 auto;
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.07);
        background: #fff;
        padding: 2.5rem 2rem;
    }

    .account-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

        .account-header h1 {
            font-weight: 700;
            color: #1565c0;
            margin-bottom: 0;
            font-size: 2.2rem;
            letter-spacing: 1px;
        }

    .btn-primary {
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 0.6rem 1.6rem;
        box-shadow: 0 2px 10px rgba(67,233,123,0.10);
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #38f9d7 0%, #43e97b 100%);
            color: #fff;
        }

    .table {
        border-radius: 12px;
        overflow: hidden;
        margin-top: 1.5rem;
        background: #f8f9fa;
    }

        .table thead {
            background: linear-gradient(90deg, #1565c0 0%, #42a5f5 100%);
            color: #fff;
        }

        .table th {
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 1rem;
            border: none;
        }

        .table td {
            vertical-align: middle;
            font-size: 1.04rem;
            padding: 0.8rem 1rem;
            border: none;
            background: #fff;
        }

    .badge-info {
        background: linear-gradient(90deg, #1565c0 0%, #42a5f5 100%);
        color: #fff;
        font-size: 0.96rem;
        border-radius: 8px;
        padding: 0.35em 1em;
    }

    .btn-sm {
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.98rem;
        margin-right: 6px;
        padding: 0.4rem 1.1rem;
        transition: background 0.18s, color 0.18s, box-shadow 0.18s;
    }

    .btn-outline-primary {
        border-color: #42a5f5;
        color: #1565c0;
        background: transparent;
    }

        .btn-outline-primary:hover {
            background: #42a5f5;
            color: #fff;
            box-shadow: 0 2px 10px rgba(66,165,245,0.10);
        }

    .btn-outline-danger {
        border-color: #ef5350;
        color: #b71c1c;
        background: transparent;
    }

        .btn-outline-danger:hover {
            background: #ef5350;
            color: #fff;
            box-shadow: 0 2px 10px rgba(239,83,80,0.10);
        }

    .alert-info {
        border-radius: 10px;
        padding: 1.3rem 2rem;
        font-size: 1.1rem;
        background: linear-gradient(90deg, #e3f0ff 0%, #f8f9fa 100%);
        color: #1565c0;
        margin-top: 2rem;
        text-align: center;
    }

        .alert-info a {
            font-weight: 600;
            color: #42a5f5;
            text-decoration: underline;
            margin-left: 6px;
        }

            .alert-info a:hover {
                color: #1565c0;
                text-decoration: underline;
            }
</style>

<div class="account-list-bg">
    <div class="account-list-card shadow">
        <div class="account-header">
            <h1><i class="bi bi-people"></i> Account Management</h1>
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-person-plus"></i> Create New Account</a>
        </div>

        @if (Model.Account != null && Model.Account.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Account)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                <span class="badge badge-info">@Html.DisplayFor(modelItem => item.Role)</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td style="text-align:center;">
                                <a asp-page="./Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-page="./Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                                <a href="javascript:void(0);" class="btn btn-sm btn-outline-danger"
                                   onclick="confirmDelete('@item.AccountId')">
                                    <i class="bi bi-trash"></i> Delete
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                <p><i class="bi bi-info-circle"></i> No accounts found. <a asp-page="Create"><i class="bi bi-person-plus"></i> Create the first account</a></p>
            </div>
        }
    </div>
</div>

<form method="post" asp-page-handler="Delete" id="deleteForm">
    <input type="hidden" name="id" id="deleteAccountId" />
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this account?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(accountId) {
            document.getElementById("deleteAccountId").value = accountId;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}