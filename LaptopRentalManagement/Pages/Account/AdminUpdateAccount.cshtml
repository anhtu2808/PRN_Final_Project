@page
@model LaptopRentalManagement.Pages.Account.EditModel

@{
    ViewData["Title"] = "Edit Account";
}

<style>
    body, html {
        width: 100vw;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .edit-account-bg {
        background: linear-gradient(135deg, #e3f0ff 0%, #f8f9fa 100%);
        min-height: 100vh;
        width: 100vw;
        padding: 0;
        margin: 0;
    }

    .edit-account-card {
        max-width: 440px;
        margin: 50px auto;
        border-radius: 18px;
        box-shadow: 0 6px 24px rgba(0,0,0,0.08), 0 1.5px 3px rgba(0,0,0,0.06);
        background: #fff;
        overflow: hidden;
    }

    .edit-account-header {
        background: linear-gradient(90deg, #1565c0 0%, #42a5f5 100%);
        color: #fff;
        border-bottom: none;
        padding: 2rem 1rem 1.5rem 1rem;
        text-align: center;
        border-radius: 18px 18px 0 0;
    }

        .edit-account-header h2 {
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 0;
        }

    .form-label, .control-label {
        font-weight: 500;
        color: #2d3748;
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 1px solid #b3c2db;
        box-shadow: none;
        transition: border-color 0.2s;
        margin-bottom: 8px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #42a5f5;
            box-shadow: 0 0 0 2px rgba(66,165,245,0.15);
        }

    .btn-primary {
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0.7rem 0;
        letter-spacing: 1px;
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        border: none;
        box-shadow: 0 4px 16px rgba(67,233,123,0.10);
        width: 100%;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg,#38f9d7 0%, #43e97b 100%);
            box-shadow: 0 6px 24px rgba(67,233,123,0.16);
            color: #fff;
        }

    .text-danger {
        font-size: 0.96rem;
        margin-top: 2px;
        display: block;
    }

    .edit-account-actions {
        text-align: center;
        padding-bottom: 1.5rem;
    }

        .edit-account-actions a {
            font-weight: 600;
            color: #1565c0;
            font-size: 1rem;
            text-decoration: none;
            transition: color 0.18s;
            border-radius: 8px;
            padding: 0.5rem 1.25rem;
        }

            .edit-account-actions a:hover {
                color: #42a5f5;
                text-decoration: underline;
                background: #e3f0ff;
            }
</style>

<div class="edit-account-bg">
    <div class="edit-account-card shadow">
        <div class="edit-account-header">
            <h2><i class="bi bi-pencil-square"></i> Edit Account</h2>
        </div>
        <div class="card-body p-4">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Account.AccountId" />
                <div class="mb-4">
                    <label asp-for="Account.Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Account.Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Account.Email" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Account.PasswordHash" class="form-label">Password <span class="text-danger">*</span></label>
                    <input asp-for="Account.PasswordHash" type="password" class="form-control" placeholder="Enter secure password" />
                    <span asp-validation-for="Account.PasswordHash" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Account.Role" class="form-label">Role <span class="text-danger">*</span></label>
                    <select asp-for="Account.Role" asp-items="Model.Roles" class="form-select">
                        <option value="">-- Select a Role --</option>
                    </select>
                    <span asp-validation-for="Account.Role" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Account.Name" class="form-label">Full Name <span class="text-danger">*</span></label>
                    <input asp-for="Account.Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Account.Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
            </form>
            <div class="edit-account-actions mt-4">
                <a asp-page="./Index"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}