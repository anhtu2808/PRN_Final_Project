<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="admin-body">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <i class="fas fa-laptop-code"></i>
                    <span class="sidebar-text">LaptopRental</span>
                </div>
                <button class="sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="fas fa-times"></i>
                </button>
                <button class="sidebar-collapse d-none d-lg-block" id="sidebarCollapse">
                    <i class="fas fa-chevron-left"></i>
                </button>
            </div>
            
            <div class="sidebar-body">
                <ul class="sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/manage" data-tooltip="Dashboard">
                            <i class="fas fa-tachometer-alt"></i>
                            <span class="sidebar-text">Dashboard</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/orders" data-tooltip="Orders">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="sidebar-text">Orders</span>
                            <span class="badge badge-danger sidebar-text">5</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/laptops" data-tooltip="Laptops">
                            <i class="fas fa-laptop"></i>
                            <span class="sidebar-text">Laptops</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/Customers/AccountList" data-tooltip="Customers">
                            <i class="fas fa-users"></i>
                            <span class="sidebar-text">Customers</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/brands" data-tooltip="Brands">
                            <i class="fas fa-tags"></i>
                            <span class="sidebar-text">Brands</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/categories" data-tooltip="Categories">
                            <i class="fas fa-list"></i>
                            <span class="sidebar-text">Categories</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/reviews" data-tooltip="Reviews">
                            <i class="fas fa-star"></i>
                            <span class="sidebar-text">Reviews</span>
                        </a>
                    </li>
                    
                    <li class="nav-divider"></li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/analytics" data-tooltip="Analytics">
                            <i class="fas fa-chart-bar"></i>
                            <span class="sidebar-text">Analytics</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/manage/settings" data-tooltip="Settings">
                            <i class="fas fa-cog"></i>
                            <span class="sidebar-text">Settings</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-details sidebar-text">
                        <div class="user-name">Admin User</div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
                <div class="sidebar-actions">
                    <a href="/logout" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="sidebar-text">Logout</span>
                    </a>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header -->
            <header class="main-header">
                <div class="header-left">
                    <button class="sidebar-toggle d-lg-none" id="mobileSidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                
                <div class="header-right">
                    <div class="header-actions">
                        <button class="btn btn-icon" data-bs-toggle="dropdown">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end notification-dropdown">
                            <h6 class="dropdown-header">Notifications</h6>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-shopping-cart text-primary"></i>
                                New order received
                                <small class="text-muted">2 min ago</small>
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-user text-success"></i>
                                New customer registered
                                <small class="text-muted">5 min ago</small>
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-star text-warning"></i>
                                New review posted
                                <small class="text-muted">10 min ago</small>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-center" href="#">View all notifications</a>
                        </div>
                        
                        <div class="user-menu dropdown">
                            <button class="btn btn-icon user-avatar" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=Admin+User&background=6c757d&color=fff" alt="User" class="rounded-circle">
                            </button>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="/manage/profile">
                                    <i class="fas fa-user"></i> Profile
                                </a>
                                <a class="dropdown-item" href="/manage/settings">
                                    <i class="fas fa-cog"></i> Settings
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Overlay for mobile -->
    <div class="sidebar-overlay d-lg-none" id="sidebarOverlay"></div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 